<Application x:Class="PR_5_.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PR_5_"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TStyle" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Franklin Gothic"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="10,10,10,10"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock" x:Key="Header">
            <Setter Property="FontFamily" Value="Franklin Gothic"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <ControlTemplate TargetType="Button" x:Key="BtnResult">
            <Border CornerRadius="20" BorderThickness="1" BorderBrush="#42AAFF" Background="#C7EDFF" Height="40" Width="150">
                <ContentControl Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{TemplateBinding Content}"/>
            </Border>
        </ControlTemplate>
    </Application.Resources>
</Application>
